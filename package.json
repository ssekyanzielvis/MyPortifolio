{
  "name": "portifolio",
  "version": "1.0.0",
  "description": "Single-page portfolio website for SSEKYANZI ELVIS",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css",
    "watch:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --watch",
    "dev": "npm run build:css && npm run start"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
